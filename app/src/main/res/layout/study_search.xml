<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#c2c2c2"
        android:paddingTop="10dp"
        android:padding="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/backgroundresource"
            android:hint="검색어를 입력해주세요."
            android:minHeight="48dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_line"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:checked="true"
                android:text="전체"
                android:textAlignment="center"
                android:textColor="@drawable/selector_text" />

            <RadioButton
                android:id="@+id/radioButton4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:text="프로그래밍"
                android:textAlignment="center"
                android:textColor="@drawable/selector_text" />

            <RadioButton
                android:id="@+id/radioButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:text="취업"
                android:textAlignment="center"
                android:textColor="@drawable/selector_text" />

            <RadioButton
                android:id="@+id/radioButton6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:text="어학"
                android:textAlignment="center"
                android:textColor="@drawable/selector_text" />

            <RadioButton
                android:id="@+id/radioButton7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/selector_radio_button"
                android:button="@null"
                android:text="기타"
                android:textAlignment="center"
                android:textColor="@drawable/selector_text" />
        </RadioGroup>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/expandButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/down_arrow" />

    </LinearLayout>

    <!--태그 고르기(전체, 프로그래밍, 취업, 어학, 기타) -->
    <LinearLayout
        android:id="@+id/filteringScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6E6E6"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        android:visibility="gone">

        <!--인원 고르기-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="인원" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/white_box_radius"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@drawable/selector_text"
                android:text="1명"/>

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/white_box_radius"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@drawable/selector_text"
                android:text="2명"
                android:textSize="13dp" />

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/white_box_radius"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@drawable/selector_text"
                android:text="3명"
                android:textSize="13dp" />

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/white_box_radius"
                android:textColor="@drawable/selector_text"
                android:button="@null"
                android:gravity="center"
                android:text="기타"
                android:textSize="13dp" />
        </RadioGroup>

        <!--기간 고르기-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="스터디 기간" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/white_box_radius"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="1개월"
                android:textSize="13dp"
                android:textColor="@drawable/selector_text"/>

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/white_box_radius"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="2개월"
                android:textSize="13dp"
                android:textColor="@drawable/selector_text" />

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/white_box_radius"
                android:button="@null"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:text="6개월"
                android:textSize="13dp"
                android:textColor="@drawable/selector_text" />

            <RadioButton
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:background="@drawable/white_box_radius"
                android:button="@null"
                android:gravity="center"
                android:text="기타"
                android:textSize="13dp"
                android:textColor="@drawable/selector_text" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:backgroundTint="#E3E3E3"
        android:contentDescription="Register study"
        android:src="@drawable/edit_icon"
        android:tint="@null"
        app:borderWidth="0dp"
        app:elevation="6dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></com.google.android.material.floatingactionbutton.FloatingActionButton>

</LinearLayout>