<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/studyArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical">

        <TextView
            android:textStyle="bold"
            android:id="@+id/studyRecuit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/gray_box_radius"
            android:gravity="center"
            android:padding="5dp"
            android:text="모집중"
            android:textColor="@color/white"
            android:textSize="10dp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/studyField"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@drawable/gray_box_radius"
            android:gravity="center"
            android:padding="5dp"
            android:text="프로그래밍"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </LinearLayout>

    <!--출석 시간, 등록 장소 table-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TableRow>

            <TextView
                android:id="@+id/studyTitle"
                android:layout_height="wrap_content"
                android:onClick="onClick"
                android:padding="3dp"
                android:text="모바일 프로그래밍 성실한 스터디 그룹원 구합니다."
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="210dp"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_marginBottom="7dp"
                android:id="@+id/studyRegisterDay"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:text="2021.10.15"
                android:textColor="#9D9D9D" />
        </TableRow>

    </TableLayout>

</LinearLayout>